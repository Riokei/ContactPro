@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    ViewData["Email"] = "gotestcoder@gmail.com";
    ViewData["Pass"] = "demoAccount-12";
    
}


<div class="row d-flex justify-content-center gy-2">
    <div class="col-6">
        <section>

            <form id="account" method="post" class="mb-5">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="display-none">
                    <input style="display:none" asp-for="Input.Email" value="@ViewData["Email"]" />
                    <span style="display:none" asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div style="display:none">
                    <input  asp-for="Input.Password" value="@ViewData["Pass"]" />
                    <span  asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <button id="login-submit" type="submit" class="btn btn-lg btn-primary">DEMO APPLICATION</button>
            </form>


            <form id="account" method="post">
                <h2>Log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mt-2">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox mt-2">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div class="text-decoration-none">                 
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a> &nbsp;


                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a> &nbsp;
                    
                    
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                   
                </div>
            </form>
        </section>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
